{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types" : ["node"],
    "baseUrl": ".",
    "paths": {
      "#preload": [
        "../preload/src/index"
      ],
      "/@/*": [
        "./src/*"
      ]
    },
    "lib": ["ESNext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
